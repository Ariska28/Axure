{% if vimeo %}
        <div class="b-video__wrapper" data-video-vimeo-id="331269652">
            <iframe controls="0" src="https://player.vimeo.com/video/331269652" frameborder="0" frameborder="0" allowfullscreen></iframe>
            <script src="https://player.vimeo.com/api/player.js"></script>
        </div>
    {% else %}
        {# b-video__border using for hidding extra black border for youtube iframe #}
        <div class="b-video__border"></div>
        <div class="b-video__wrapper">
            <div id="ytplayer"></div>
            <script src="http://www.youtube.com/iframe_api"></script>
            <script>
                let player;

                function onYouTubeIframeAPIReady() {
                    player = new YT.Player('ytplayer', {
                    videoId: 'M7lc1UVf-VE',
                    events: {
                        'onStateChange': function(event) {
                            if (event.data == YT.PlayerState.BUFFERING) {
                                hideThumbnale();
                            } 
                        }
                    }
                    });
                }
                function hideThumbnale() {
                    const ytThumbnain = $('.b-video--youtube');
                        ytThumbnain.addClass('b-video_pseudo-hide b-video_pseudo-hide-show');
                }
            </script>
        </div>
{% endif %}