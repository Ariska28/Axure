{% extends 'layout/base.twig' %}

{% block title %}
    Axure
{% endblock %}
{% block header %}
    {% include 'components/header.twig' with {
        'isLight': false
    } %}
{% endblock %}

{% block body %}

    <section class="section hero-buy">
        <div class="container">
            <h1 class="hero-buy__title">Purchase Axure RP</h1>
            <p class="hero-buy__text">Fusce vehicula dolor arcu, sit amet blandit dolor mollis nec. Donec viverra eleifend lacus, vitae ullamcorper metus. Sed sollicitudin ipsum quis nunc sollicitudin ultrices. Donec euismod scelerisque ligula. Maecenas eu varius risus, eu aliquet arcu. </p>

            {%  include 'layout/buy/cards.twig' %}
        </div>

        <svg version="1.1"
             xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
             x="0px" y="0px" width="1440px" height="53.6px" viewBox="0 0 1440 53.6" enable-background="new 0 0 1440 53.6"
             preserveAspectRatio="none" class="hero-buy__mask">
            <path d="M1440,53.6V0c0,0-152.8,13.4-318.5,26.8S777,53.6,725,53.6S491.8,40.2,323.5,26.8S0,0,0,0l0,53.6H1440z"/>
        </svg>
    </section>

    <section class="info-link-box">
        <p>Looking for Enterprise options? Check out our <a href="#">Enterprise</a> page.</p>
        <p>Need more info on <a href="#">Axure Cloud</a>?</p>
    </section>

    {% include 'components/trust-block.twig' with {
        'title': 'Trusted by:',
        'trust_list': [
            {
                'src': 'images/trust_amazon.png',
                'src2x': 'images/trust_amazon@2x.png',
                'alt': 'Amazon'
            },
            {
                'src': 'images/trust_epicgames.png',
                'src2x': 'images/trust_epicgames@2x.png',
                'alt': 'Epic Games'
            },
            {
                'src': 'images/trust_slack.png',
                'src2x': 'images/trust_slack@2x.png',
                'alt': 'Slack'
            },
            {
                'src': 'images/trust_saleforce.png',
                'src2x': 'images/trust_saleforce@2x.png',
                'alt': 'SaleForce'
            },
            {
                'src': 'images/trust_verizon.png',
                'src2x': 'images/trust_verizon@2x.png',
